<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script src="https://code.jquery.com/jquery-3.4.1.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js" type="text/javascript"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$("td").eq(4).css("background-color","yellow");
		var idx=4;
 		var vm = new Vue({
 			el:"#container",
 			data:{msg:"이벤트 처리"},
 			methods:{
 				go:function(e){
 					$("td").css("background-color","");
 		//			alert(e.keyCode);
 					// 오른쪽, 상하 이동 처리.
 					if(e.keyCode==37){
 						idx--;
 						if(idx<0) idx++;
 						$("td").eq(idx).css("background-color","yellow");
 					}
 					if(e.keyCode==39){
 						idx++;
 						if(idx>8) idx--;
 						$("td").eq(idx).css("background-color","yellow");
 					}
 					if(e.keyCode==38){
 						idx-=3;// 위로는 3개 단위로 감소..
 						if(idx<0) idx+=3; // 예외 처리..
 						$("td").eq(idx).css("background-color","yellow");
 					}
 					if(e.keyCode==40){
 						idx+=3; // 아래는 3개 단위로 증가 처리..
 						if(idx>8) idx-=3; // 예외 처리..
 						$("td").eq(idx).css("background-color","yellow");
 					}
 					
 				}
 			}
 		});
	});
</script>		
</head>
<body>
	<div id="container" >
		<h1>{{msg}}</h1> 
		<input type="text" @keyup="go"/>
		<table width="300" height="300" border>
			<tr><td></td><td></td><td></td></tr>
			<tr><td></td><td></td><td></td></tr>
			<tr><td></td><td></td><td></td></tr>
		</table>
	</div>
</body>
</html>