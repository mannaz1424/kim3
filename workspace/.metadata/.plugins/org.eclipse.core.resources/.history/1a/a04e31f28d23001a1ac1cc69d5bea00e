<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>06-10</title>
  <script src="https://unpkg.com/vue/dist/vue.min.js"></script>
</head>
<template id='timeTemplate'>
    <div>
        <span>{{nowTS}}</span>
        <button v-on:click="timeClick">현재 시간</button>
    </div>
</template>
<script type="text/javascript">
Vue.component('time-component', {
    template : '#timeTemplate',
    data : function() {
    	// 컴포넌트에서의 model 데이터는 반드시 함수를 통해서 return  하여야
    	// 한다.
        return { nowTS : 0 };
    },
    methods : {
        timeClick : function(e) {
        	// 클릭시, 모델 데이터를 현재 시간으로 출력 처리..
            this.nowTS = (new Date()).toLocaleString();
        }
    }
})
</script>
<body>
    <div id="app">
        <time-component></time-component>
        <time-component></time-component>
    </div>
    aaaaaaa
</body>
<script type="text/javascript">
Vue.config.devtools = true;
var v = new Vue({
    el : '#app'
})
</script>
</html>