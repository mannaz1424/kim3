@charset "UTF-8";

/* 기본세팅 */
html,body{
	height:100%;
	overflow:hidden;
	margin:0;
	padding:0;
}

/* 백그라운드설정 */
#contentBox{
	width:100%;
	height:100%;
	overflow:hidden;
	display: flex;
	flex-direction: row;
	padding:0;
	margin:0;
}

#leftBackgnd{
	width:45%;
	height:100%;
	background-image:linear-gradient(to right,#6f42c1, #17a2b8);
	display:block;
}

#rightBackgnd{
	width:55%;
	height:100%;
	position:relative;
	display: flex;
	flex-direction: row;
	align-items: center;
	
}

.left_items{
	width:500px;
	position:absolute;
	top:20%;
	left:22%;
	transform:translate(-50%,-10%);
	
}
/* 글씨 애니메이션 */
.first_line, .second_line, .third_line{
	list-style:none;
}


/* 첫번째 */

.first_line li{
	display: inline-block;
	margin-right:10px;
	font-family:sans-serif;
	font-size:4em;
	color:white;
	opacity:1;
	transition:all 2.5s ease;
}
.first_line.hidden li:nth-child(1) {
	transform:translateX(-200px) translateY(-200px);
	
}
.first_line.hidden li:nth-child(2) {
	transform:translateX(20px) translateY(100px);
	color:#6f42c1;
}
.first_line.hidden li:nth-child(3) {
	transform:translateX(-150px) translateY(-200px);
}
.first_line.hidden li:nth-child(4) {
	transform:translateX(100px) translateY(250px);
}
.first_line.hidden{
	opacity:0;
}

/* 두번째 */

.second_line{
	margin-left:15%;
}
.second_line li{
	display: inline-block;
	margin-right:10px;
	font-family:sans-serif;
	font-size:4em;
	color:white;
	opacity:1;
	transition:all 3s ease;
}
.second_line.hidden li:nth-child(1) {
	transform:translateX(-200px) translateY(-200px);
	
}
.second_line.hidden li:nth-child(2) {
	transform:translateX(20px) translateY(100px);
	color:#6f42c1;
}
.second_line.hidden li:nth-child(3) {
	transform:translateX(-150px) translateY(-200px);
}
.second_line.hidden li:nth-child(4) {
	transform:translateX(50px) translateY(-20px);
}
.second_line.hidden li:nth-child(5) {
	transform:translateX(100px) translateY(230px);
}
.second_line.hidden{
	opacity:0;
}

/* 세번째 */
.third_line{
	margin-left:30%;
}
.third_line li{
	display: inline-block;
	margin-right:10px;
	font-family:sans-serif;
	font-size:4em;
	color:white;
	opacity:1;
	transition:all 3.5s ease;
}
.third_line.hidden li:nth-child(1) {
	transform:translateX(-200px) translateY(-200px);
}
.third_line.hidden li:nth-child(2) {
	transform:translateX(20px) translateY(100px);
}
.third_line.hidden li:nth-child(3) {
	transform:translateX(-150px) translateY(-200px);
}
.third_line.hidden li:nth-child(4) {
	transform:translateX(50px) translateY(-20px);
	color:#6f42c1;
}
.third_line.hidden li:nth-child(5) {
	transform:translateX(100px) translateY(230px);
}
.third_line.hidden{
	opacity:0;
}


/* 오른쪽 부분 */

#account_info{
	margin:0 auto;
	padding:0;
}
.account-pages{
	padding:0;
}
.account-box{
	padding:0;
	margin:0;
	width:400px;
	box-shadow: 5px 5px 8px rgba(10,80,200,0.2);
}

#logBtn{
	border:1px solid #3960d1;
}

/* media query */
@media screen and (max-width: 700px) {
	#leftBackgnd{
		display:none;
	}
}