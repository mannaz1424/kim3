'use strict';

var boardApp = angular.module("boardApp", []);

//팩토리 정의
boardApp.factory("BoardService",function($http){

    //메서드 정의
    var service = {
    		selectContentList : selectContentListAjax
    };
    
    return service;
    
    //메서드 구현
    function selectContentListAjax(param) {
        return $http.post("/join/findIdAjax.ans", param).then(handleSuccess, handleError);
    }
    
    /*function thirdLoginAjax(url,param){
        return $http.post(url).then(handleSuccess,handleError);
    }*/
/**********************************************************************************************************************/    
    //private functions
    function handleSuccess(res){
        return res.data;
    }
    
    function handleError(error){
        return function(){
            return {success: false, message: error};
        };
    }
    
});